{
	"manifest_version" : 2,
	"name" : "NoVizSmell",
	"version" : "1.0",

	"description" : "Search for previous breaches history for a URL",

	"permissions": [
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],

	"browser_specific_settings": {
		"gecko": {
		  "id": "background@addon"
		}
	},
	  

	"browser_action": {
		"default_title" : "NoVizSmell",
		"default_popup" : "display/popup.html"
	},


	"background" : {
		"scripts" : ["background/breaches.js"]
	}
	
}
