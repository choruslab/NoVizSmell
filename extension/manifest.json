{
	"manifest_version" : 2,
	"name" : "NoVizSmell",
	"version" : "1.0",

	"description" : "Search for previous breaches history for a URL",

	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],

	"browser_action": {
		"default_title" : "NoVizSmell",
		"default_popup" : "popup/popup.html"
	},


	"background" : {
		"scripts" : ["background/breaches.js"]
	}
	
}
