html(lang="en")
    head
        meta(charset="utf-8")

        title #{Title}'s Breach Information
        include ../partials/resources
        
    body
        div(class="container-fluid")
             div(class="row")
                div(class="col-2"): img(src="" + LogoPath alt="" + Name + "'s " + "logo" style="width: 5rem;display:inline-block")

                div(class="center-block text-center col-10"): h1(style="text-align: center;display:inline-block;padding-top: 12pt;") #{Name}

        div(class="card")

            div(class="cardbody")
                ul(class="list-group list-group-flush")
                    li(class="list-group-item"): h3 Description: 
                        p !{Description}
                    li(class="list-group-item"): h3 Data compromised: 
                        p #{DataClasses} 
                    li(class="list-group-item"): h3 Date when event was registered:
                        p= new Date(AddedDate).toString()
                    li(class="list-group-item"): h3 Last Update: 
                        p= new Date(ModifiedDate).toString()
                
        div(class="card-footer" style="text-align: right;"): caption Data obtained from #[a(href="https://haveibeenpwned.com") haveibeenpwned.com]